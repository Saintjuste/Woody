<window id="136">
<defaultcontrol always="true">-</defaultcontrol>
<allowoverlay>yes</allowoverlay>
   
<coordinates>
  <system>1</system>
  <posx>550</posx>
  <posy>220</posy>
</coordinates>

<include>popup</include>
        
<controls>
  	<!-- Loading indicator -->
		<control type="group">
			<posx>0</posx>
			<posy>0</posy>
			<control type="image">
				<aspectratio>keep</aspectratio>
				<texture>loading/bg/loading_bg.png</texture>
			</control>
			<control type="multiimage">
				<width>184</width>
				<height>64</height>
				<imagepath background="true">loading</imagepath>
				<timeperimage>65</timeperimage>
				<fadetime>1</fadetime>
				<loop>yes</loop>
				<aspectratio>keep</aspectratio>
			</control>
		</control>
  
</controls>
  
</window>